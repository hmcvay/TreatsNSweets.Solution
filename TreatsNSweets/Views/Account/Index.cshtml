@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Your Account</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    <p>@Html.ActionLink("Add Treats", "Create", "Treats")</p>
    <p>@Html.ActionLink("Add Flavors", "Create", "Flavors")</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
      <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <h1>@Html.ActionLink("Log in", "Login")</h1>
    <h1>@Html.ActionLink("Register", "Register")</h1>
    
}
