@{
  Layout = "_Layout";
}

@model TreatsNSweets.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required="required"})

  @Html.TextBox("Add Flavor", (String)ViewBag.FlavorId)
  @* @Html.DropDownList("FlavorId") *@

  <input type="submit" value="Add new treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all treats", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>