@{
  Layout = "_Layout";
}

@using TreatsNSweets.Models;
@using System;
@model List<TreatsNSweets.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>none</h3>
  <h4>@Html.ActionLink("Add Treat", "Create")</h4>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Treat", "Create")</p>
